generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  id        String   @id @default(uuid())
  product   Int
  quantity  Int
  price     Float
  address   String
  email     String
  phone     String
  name      String
  comment   String
  status    String @default("open")
  delivery  DateTime
  createdAt DateTime @default(now())
}
